<%
import os, yaml, sys
# import our utility library
sys.path.insert(0, os.path.join(os.environ["LANDSCAPE_SCRIPTS_HOME"], "lib"))
import utils

config=yaml.load(open(os.environ['LANDSCAPE_CONFIG']))
profileName=config["cloud"]["variant"]
region=config["seed_config"]["region"]
image=config["seed_config"]["image"]
zones=config["seed_config"]["zones"]
url=config["authentication"]["variant_openstack"]["os_auth_url"]
os_lbaas_provider=config["misc"]["variant_openstack"]["os_lbaas_provider"]
os_fip_pool_name=config["misc"]["variant_openstack"]["os_fip_pool_name"]
%>
---
apiVersion: garden.sapcloud.io/v1beta1
kind: CloudProfile
metadata:
  name: ${profileName}
spec:
  openstack:
    constraints:
      dnsProviders:
      - name: aws-route53
      - name: unmanaged
      loadBalancerProviders:
      - name: ${os_lbaas_provider}
      floatingPools:
      - name: ${os_fip_pool_name}
      kubernetes:
        versions:
        - 1.10.1
        - 1.9.7
        - 1.8.11
      machineImages:
      - name: CoreOS
        image: ${image}
      machineTypes:
      - name: medium_2_4
        cpu: "2"
        gpu: "0"
        memory: 4Gi
        volumeType: default
        volumeSize: 20Gi
      - name: medium_4_8
        cpu: "4"
        gpu: "0"
        memory: 8Gi
        volumeType: default
        volumeSize: 40Gi
      zones:
      - region: ${region}
        names:
        % for a in zones:
        - ${a}
        % endfor
    keystoneURL: ${url}
